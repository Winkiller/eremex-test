<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mxc="https://schemas.eremexcontrols.net/avalonia/charts"
        xmlns:testEremex="clr-namespace:TestEremex"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TestEremex.MainWindow"
        Title="TestEremex"
        x:DataType="testEremex:MyViewModel">
    <Window.DataContext>
        <testEremex:MyViewModel />
    </Window.DataContext>
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,Auto,Auto,*">
        <Button Click="Button_OnClick">Generate</Button>
        <Button Click="Button_OnClick2" Grid.Row="0" Grid.Column="1">Draw</Button>
        <mxc:CartesianChart Grid.Row="1" Grid.ColumnSpan="4" Grid.Column="0">
                           
            <mxc:CartesianChart.Series>
                <mxc:CartesianSeries DataAdapter="{Binding DataAdapter}">
                    <mxc:CartesianLineSeriesView Color="#0094ff" Thickness="2" />
                </mxc:CartesianSeries>
            </mxc:CartesianChart.Series>
        </mxc:CartesianChart>
        
    </Grid>
</Window>
